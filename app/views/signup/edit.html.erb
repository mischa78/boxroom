<% content_for :title, t(:sign_up) -%>

<%= bootstrap_form_for @user, :url => { :action => 'update' } do |f| %>
  <%= f.text_field :name, label: t(:name) %>
  <%= f.text_field :email, label: t(:email) %>
  <%= f.password_field :password, label: t(:password) %>
  <%= f.password_field :password_confirmation, label: t(:confirm_password) %>
  <%= f.submit t(:sign_up), class: "btn btn-success" %> &nbsp; &mdash; &nbsp;
  <%= link_to t(:back), new_session_path %>
<% end %>
