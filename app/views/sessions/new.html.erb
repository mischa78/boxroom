<% content_for :title, t(:sign_in) -%>

<%= bootstrap_form_tag url: sessions_path do |f| %>
  <%= f.text_field :username, label: t(:username) %>
  <%= f.password_field :password, label: t(:password) %>
  <%= f.check_box :remember_me, lebel: t(:remember_me) %>
  <%= f.submit t(:sign_in), class: "btn btn-success" %> &nbsp; &mdash; &nbsp;
  <%= link_to t(:reset_password), new_reset_password_path %>
<% end %>
