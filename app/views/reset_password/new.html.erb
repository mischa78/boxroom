<% content_for :title, 'Reset password' -%>

<h1><%= content_for :title %></h1>
<% if flash[:notice] -%>
<p class="notice">
	<%= flash[:notice] %>
</p>
<% end -%>
<% if flash[:error] -%>
<p class="error">
	<%= flash[:error] %>
</p>
<% end -%>
<p>
	Submit your email address and we will send you an email<br>
	with instructions on how to reset your password.
</p>
<%= form_tag(reset_password_index_path) do %>
	<p>
		<%= label_tag :email %>:<br>
		<%= text_field_tag :email, nil, :class => 'text_input' %>
	</p>
	<p>
		<%= submit_tag 'Submit' %>
	</p>
<% end %>